sha512sums="4aa558e931f9d59f0d0c3f758c2a0e6a57180c606f216ef7c878af2dc663b43a927a42718f2ac087ca0b254bbcde792fbaa6b787af7665c0094d091be79a0524  xf86-input-libinput-0.19.1.tar.bz2"
