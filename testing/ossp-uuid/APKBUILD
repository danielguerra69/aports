# Contributor: Daniel Guerra
# Maintainer: Daniel Guerra
pkgname=ossp-uuid
pkgver=1.6.2
pkgrel=0
pkgdesc="OSSP uuid is a ISO-C:1999 application programming interface (API) and corresponding command line interface (CLI) for the generation of DCE 1.1, ISO/IEC 11578:1996 and RFC 4122 compliant Universal
url="http://www.ossp.org/pkg/lib/uuid/"
arch="all"
license=""
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="ftp://ftp.ossp.org/pkg/lib/uuid/uuid-1.6.2.tar.gz"

_builddir="$srcdir"/uuid-$pkgver
prepare() {
        local i
        cd "$_builddir"
        for i in $source; do
                case $i in
                *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
                esac
        done
}

build() {
        cd "$_builddir"
        ./configure \
                --prefix=/usr \
                --sysconfdir=/etc \
                --mandir=/usr/share/man \
                --infodir=/usr/share/info \
                --localstatedir=/var \
                || return 1
        make || return 1
}

package() {
        cd "$_builddir"
        make DESTDIR="$pkgdir" install || return 1
        rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="5db0d43a9022a6ebbbc25337ae28942f  uuid-1.6.2.tar.gz"
sha256sums="11a615225baa5f8bb686824423f50e4427acd3f70d394765bdff32801f0fd5b0  uuid-1.6.2.tar.gz"
sha512sums="16c7e016ce08d7679cc6ee7dec43a886a8c351960acdde99f8f9b590c7232d521bc6e66e4766d969d22c3f835dcc2814fdecc44eef1cd11e7b9b0f9c41b5c03e  uuid-1.6.2.tar.gz"
